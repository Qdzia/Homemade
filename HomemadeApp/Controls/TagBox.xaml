<UserControl x:Class="HomemadeApp.Controls.TagBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomemadeApp.Controls"
             mc:Ignorable="d" Background="DarkBlue"
             Name="Root"
             d:DesignHeight="100" d:DesignWidth="700">
    <Grid>
        <TextBlock FontSize="40" Foreground="White" x:Name="WordBox" Text="{Binding Word, ElementName=Root}"/>
    </Grid>
</UserControl>
