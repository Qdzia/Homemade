<Window x:Class="HomemadeApp.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomemadeApp.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button Content=" R " FontSize="20" x:Name="GotoRecepie"/>
            <Button Content=" F " FontSize="20" x:Name="GotoFreeSearchRec"/>
            <Button Content=" P " FontSize="20" x:Name="GotoPlanner"/>
            <Button Content=" I " FontSize="20" x:Name="GotoFreeSearchIng"/>

        </StackPanel>

        <ContentControl Grid.Row="0" Grid.Column="1" x:Name="ActiveItem"/>

    </Grid>
</Window>
